<Window x:Class="Instructor___Omlate.StartLectureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Instructor___Omlate"
        mc:Ignorable="d"
        Title="Current Courses" Height="141.333" Width="310" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Height="116" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="108*"/>
            <ColumnDefinition Width="35*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="label" Content="Course:" HorizontalAlignment="Left" Margin="10,25,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="64,29,0,0" VerticalAlignment="Top" Width="195" SelectionChanged="comboBox_SelectionChanged" Grid.ColumnSpan="2"/>
        <Button x:Name="button" Content="Start" HorizontalAlignment="Left" Margin="184,56,0,0" VerticalAlignment="Top" Width="75" Click="button_Click" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
